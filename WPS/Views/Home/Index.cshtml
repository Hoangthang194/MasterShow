<!-- Slier bar -->
@model WPS.Models.ViewHomeModelcs
<style>
    .social-icons {
        position: fixed;
        bottom: 100px; /* Cách mép trên của màn hình 10px */
        right: 10px; /* Cách mép phải của màn hình 10px */
        z-index: 1000; /* Đảm bảo phần tử này luôn nằm trên cùng */
        padding: 10px; /* Thêm khoảng đệm bên trong */
        border-radius: 5px; /* Bo tròn các góc */
    }

        .social-icons ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            gap: 10px; /* Khoảng cách giữa các biểu tượng */
        }

        .social-icons li {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-icons i {
            font-size: 40px; /* Kích thước biểu tượng */
            color: #f60; /* Màu sắc biểu tượng */
        }

            .social-icons i:hover {
                color: #f60; /* Màu sắc khi hover */
            }
</style>
<section class="popular-categories section-padding">
    <div class="wow fadeIn animated">
        <div class="carausel-4-columns-cover position-relative d-flex justify-content-center">
            <div class="carausel-4-columns" id="carausel-4-columns">
                @foreach (var item in Model.Events)
                {
                    <div class="card-1">
                        <figure class=" img-hover-scale overflow-hidden">
                            <a href="@Url.Action("Details", "Home", new { code = item.Id_Post })"><img src="@Url.Content(item.Id_Image)" alt=""></a>
                        </figure>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

