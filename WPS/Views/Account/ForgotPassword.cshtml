@model WPS.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<main aria-labelledby="title">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card col-md-12">
                    <div class="card-body col-md-12">
                        <div class="d-flex justify-content-center">
                            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4>Đổi mật khẩu</h4>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="row mb-3">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-3 col-form-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-12", placeholder = "Nhập email" })
                                    </div>
                                </div>
                                <div class="row mb-3 d-flex justify-content-center">
                                    <div class=" col-md-6">
                                        <input type="submit" class="btn btn-outline-dark" value="Gửi" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
