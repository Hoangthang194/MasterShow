<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link rel="shortcut icon" type="image/x-icon" href="~/Theme/Website/logoWeb.png">
    <!-- Template CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="~/Theme/css/main.css">
    <link rel="stylesheet" href="~/Theme/css/custom.css">
</head>
<body>
    <header class="header-area header-style-2 header-height-2">
        <div class="header-bottom header-bottom-bg-color sticky-bar">
            <div class="container">
                <div class="header-wrap header-space-between position-relative">
                    <div class="logo logo-width-1 d-block">
                        <a href="@Url.Action("Create", "HomeAdmin", new { area = "Admin" })"><img src="~/Theme/Website/logoWeb.png" alt="logo"></a>
                    </div>
                    <div class="hotline d-none d-lg-block">
                        <div style="text-align: center;">
                            <a href=@Url.Action("Index", "Home", new { area = "" })>
                                <p class="text-center d-flex justify-content-center"><i class="fa-solid fa-user"></i></p>
                                <span style="font-weight: 500; color: #000;">Trang khách</span>
                            </a>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </header>

    <main class="main mt-60">
        <div class="container">
            <div class="row row-cols-1 row-cols-md-2 g-3 mt-30">
                <div class="col-lg-3">
                    <div class="widget-category mb-30">
                        <h3 class="section-title style-1 mb-30 wow fadeIn animated">Bài viết</h3>
                        <ul class="categories">
                            <li><a id="Category" href="@Url.Action("Create", "HomeAdmin", new { area = "Admin" })">Danh mục bài viết</a></li>
                            <li><a id="Post" href="@Url.Action("Index", "Post", new { area = "Admin" })">Bài viết</a></li>
                        </ul>
                    </div>

                    <div class="widget-category mb-30">
                        <h3 class="section-title style-1 mb-30 wow fadeIn animated">Sự kiện đã làm</h3>
                        <ul class="categories">
                            <li><a id="CategoryProduct" href="@Url.Action("Create", "CategoryProduct", new { area = "Admin" })">Danh mục sự kiện</a></li>
                            <li><a id="Product" href="@Url.Action("Index", "Event", new { area = "Admin" })">Sự kiện</a></li>
                        </ul>
                    </div>

                    <div class="widget-category mb-30">
                        <h3 class="section-title style-1 mb-30 wow fadeIn animated">Tài khoản</h3>
                        <ul class="categories">
                            <li><a id="CategoryProduct" href="@Url.Action("Register", "Account", new { area = "" })">Tạo tài khoản</a></li>
                            <li><a id="Product" href="@Url.Action("ForgotPassword", "Account", new { area = "" })">Đổi mật khẩu</a></li>
                            <li><a id="Product" href="@Url.Action("LogOff", "Account", new { area = "" })">Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-9">
                    @RenderBody()
                </div>
            </div>

        </div>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</body>
</html>